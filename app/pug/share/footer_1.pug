#footer
    .container
        .fl
            img(src=imgUrl+'footer/logo.png')
        .center
            .link
                each val, index in footer.nav
                    a(
                        href=viewUrl+val.href
                    ) !{val.text}
                    if index != (footer.nav.length-1)
                        !='&nbsp|&nbsp'
            p 抵制不良游戏&nbsp;拒绝盗版游戏&nbsp;注意自我保护&nbsp;谨防受骗上当&nbsp;适度游戏益脑&nbsp;沉迷游戏伤身&nbsp;合理安排时间&nbsp;享受健康生活
            p 网站备案/许可证号：#{record}&nbsp;ICP经营许可证：#{icp}&nbsp;
            p 网络文化经营许可证：#{permit}&nbsp;&nbsp;#{address}&nbsp;&nbsp;运营中心：#{phone}
            .bottom
                div
                a(target='_blank')
                    img(src=imgUrl+'footer/verify.png', alt='安全联盟认证')
                a(href='http://sq.ccm.gov.cn:80/ccnt/sczr/service/business/emark/gameNetTag/2c94c08c634c856901638c453f1b54cf', target='_blank')
                    img(src=imgUrl+'footer/www.png')
                div
        .fr
            p.call 24小时全国服务热线
            p.number 0572-2128823
    if html5
        script(src='http://libs.baidu.com/jquery/2.0.0/jquery.min.js')
    else
        script(src='http://libs.baidu.com/jquery/1.9.1/jquery.min.js')
    script.
        var baseUrl = "#{baseUrl}",
            imgUrl = "#{imgUrl}",
            cssUrl = "#{cssUrl}",
            jsUrl = "#{jsUrl}",
            viewUrl = "#{viewUrl}",
            apiUrl = "#{apiUrl}",
            cacheUrl = "#{cacheUrl}";
    if baseJs
        script(src=jsUrl+baseJs+'.js')
    if pageJs
        script(src=jsUrl+pageJs+'.js')
